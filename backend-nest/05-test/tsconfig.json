{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "lib": [
      "es2018"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
